@model AppGCS.Models.Proyecto
@using AppGCS.Models
@{
    ViewBag.Title = "AgregarIntegrantes";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="mb-4">Agregar Integrantes al Proyecto: <span class="text-primary">@Model.Nombre</span></h2>

            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    @using (Html.BeginForm("AgregarIntegrantes", "Proyecto", FormMethod.Post))
                    {
                        @Html.Hidden("id", Model.Id)

                        <div class="mb-3">
                            <label class="form-label">Nombre del Integrante:</label>
                            <input type="text" name="nombreIntegrante" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Rol:</label>
                            <select name="rol" class="form-select" required>
                                <option value="LiderDeProyecto">Líder de Proyecto</option>
                                <option value="ProjectOwner">Project Owner</option>
                                <option value="Desarrollador">Desarrollador</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Agregar Integrante</button>
                    }
                </div>
            </div>

            <h4>Integrantes actuales:</h4>
            <ul class="list-group">
                @foreach (var i in Model.Integrantes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <span>@i.Nombre</span>
                        <span class="badge bg-secondary">@i.Rol</span>
                    </li>
                }
            </ul>

            <div class="mt-4 text-end">
                <a href="@Url.Action("Index", "Proyecto")" class="btn btn-outline-secondary">Volver a Proyectos</a>
            </div>
        </div>
    </div>
</div>
