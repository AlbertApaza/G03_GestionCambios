@{
    ViewBag.Title = "Crear";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Crear Nuevo Proyecto</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Define un nuevo proyecto para que tu equipo comience a colaborar en el ciclo de vida del software.</p>
                    @using (Html.BeginForm("Crear", "Proyecto", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="form-label">Nombre del Proyecto:</label>
                            <input type="text" name="nombre" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Metodología:</label>
                            <select name="metodologia" class="form-select" required>
                                <option value="Scrum">Scrum</option>
                                <option value="RUP">RUP</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success">Crear Proyecto</button>
                        <a href="@Url.Action("Index", "Proyecto")" class="btn btn-outline-secondary ms-2">Cancelar</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
