@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-5">Panel de Proyectos</h1>
        <p class="text-muted">Visualiza y gestiona los proyectos activos del sistema de gestión de configuración de software. Cada equipo trabaja colaborativamente como en GitHub o Azure DevOps.</p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 g-4">
        @foreach (var proyecto in Model)
        {
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title">@proyecto.Nombre</h5>
                        <p class="card-text">
                            <strong>Metodología:</strong> @proyecto.Metodologia<br />
                            <strong>Fecha de creación:</strong> @proyecto.FechaCreacion.ToShortDateString()
                        </p>
                        <a href="@Url.Action("Detalle", "Proyecto", new { id = proyecto.Id })" class="btn btn-primary">Ver detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a href="@Url.Action("Crear", "Proyecto")" class="btn btn-success btn-lg">Crear nuevo proyecto</a>
    </div>
</div>
