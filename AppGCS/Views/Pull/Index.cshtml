@{
    ViewBag.Title = "Registro de Pull/Merge Request";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" />

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">@ViewBag.Title</h4>
        </div>

        <div class="card-body">
            @if (ViewBag.Mensaje != null)
            {
                <div class="alert @ViewBag.Estado fw-bold text-center">@ViewBag.Mensaje</div>
            }

            <form method="post" class="mt-4">
                <div class="mb-3">
                    <label class="form-label fw-bold">Nombre de la Rama</label>
                    <input type="text" name="nombreRama" class="form-control" placeholder="Ej: fix/login-error" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Enlace al Pull/Merge Request</label>
                    <input type="url" name="enlacePR" class="form-control" placeholder="https://github.com/org/repo/pull/123" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Estado del PR</label>
                    <select name="estadoPR" class="form-select" required>
                        <option value="">Seleccione...</option>
                        <option>Pendiente</option>
                        <option>Aprobado</option>
                        <option>Rechazado</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Asignar Revisores</label>
                    @Html.ListBox("revisores", ViewBag.Revisores as MultiSelectList, new { @class = "form-control", size = 4 })
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-primary">Guardar Pull Request</button>
                </div>
            </form>
        </div>
    </div>
</div>
