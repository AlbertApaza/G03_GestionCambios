@model List<AppGCS.Controllers.PullController.PullRequest>

@{
    ViewBag.Title = "Lista de Pull/Merge Requests";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/css/bootstrap.min.css" />

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Pull/Merge Requests Registrados</h4>
        </div>

        <div class="card-body">
            @if (TempData["MensajeExito"] != null)
            {
                <div class="alert alert-success fw-bold text-center">@TempData["MensajeExito"]</div>
            }

            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre de Rama</th>
                        <th>Enlace al PR</th>
                        <th>Estado</th>
                        <th>Revisores Asignados</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pr in Model)
                    {
                        <tr>
                            <td>@pr.NombreRama</td>
                            <td><a href="@pr.EnlacePR" target="_blank">@pr.EnlacePR</a></td>
                            <td>@pr.EstadoPR</td>
                            <td>@string.Join(", ", pr.Revisores)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-end mt-3">
                <a href="@Url.Action("Index", "Pull")" class="btn btn-primary">Registrar Nuevo Pull Request</a>
            </div>
        </div>
    </div>
</div>
