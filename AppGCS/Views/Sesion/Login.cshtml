@* Aqui v@* Aqui va la referencia al modelo para recepcionar los datos y enviarlos por metodo post al controlador. *@
@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Iniciar sesión</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <label>Correo electrónico o usuario</label><br />
                        <input type="text" name="usuario" class="form-control" style="width:100%; padding:10px; border-radius:10px; margin-bottom:15px;" />

                        <label>Contraseña</label><br />
                        <input type="password" name="password" class="form-control" style="width:100%; padding:10px; border-radius:10px; margin-bottom:15px;" />

                        <!-- Google reCAPTCHA -->
                        <label>CAPTCHA</label><br />
                        <div class="g-recaptcha" data-sitekey="6LfWhRwrAAAAAPMGhDMV2Rt3VpY7Xc3WaT34q6Gb" style="margin-bottom: 20px;"></div>

                        <div style="display: flex; justify-content: space-between;">
                            <input type="submit" value="Ingresar" style="background-color: teal; color: white; border: none; padding: 10px 20px; border-radius: 10px;" />
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    <small>¿No tienes cuenta? <a href="/Account/Register">Regístrate aquí</a></small>
                </div>

                <!-- reCAPTCHA script -->
                <script src="https://www.google.com/recaptcha/api.js" async defer></script>
            </div>
        </div>
    </div>
</div>
