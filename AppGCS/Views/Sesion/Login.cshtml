@{
    ViewBag.Title = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #fff;">
    <div style="width: 360px; padding: 20px; border-radius: 8px;">
        <h3 class="text-center mb-4" style="font-weight: bold;">Iniciar Sesion</h3>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post))
        {
            <label style="font-size: 14px;">Usuario :</label>
            <input type="text" name="usuario" class="form-control mb-3" style="border-radius: 8px;" />

            <label style="font-size: 14px;">Contraseña :</label>
            <input type="password" name="password" class="form-control mb-3" style="border-radius: 8px;" />

            <label style="font-size: 14px; color: #337ab7;">CAPTCHA :</label>
            <div class="g-recaptcha mb-4" data-sitekey="6LfWhRwrAAAAAPMGhDMV2Rt3VpY7Xc3WaT34q6Gb"></div>

            <button type="submit" class="btn w-100" style="background-color: #3e5622; color: white; font-weight: bold;">
                Login
            </button>
        }

        <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    </div>
</div>
