@* Asegúrate que el namespace es el correcto para tu ProyectoCardViewModel *@
@model IEnumerable<G03_ProyectoGestion.Models.ProyectoCardViewModel>

@{
    ViewBag.Title = "Mis Proyectos";
}

<div class="container mt-4">
    @* Un contenedor para mejor espaciado y centrado opcional *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mis Proyectos</h2>
        @Html.ActionLink("Crear Nuevo Proyecto", "Crear", "Proyecto", null, new { @class = "btn btn-success" })
    </div>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No tienes proyectos asignados actualmente. Puedes crear uno nuevo usando el botón de arriba.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var proyecto in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    @* Ajusta columnas para diferentes tamaños de pantalla, mb-4 para margen inferior *@
                    <div class="card h-100 shadow-sm">
                        @* h-100 para misma altura de tarjetas, shadow-sm para una sombra sutil *@
                        <div class="card-body d-flex flex-column">
                            @* d-flex y flex-column para alinear el botón al final *@
                            <h5 class="card-title">@proyecto.NombreProyecto</h5>
                            <p class="card-text text-muted small">@proyecto.DescripcionProyecto</p>

                            <ul class="list-group list-group-flush mt-3 mb-3">
                                <li class="list-group-item px-0 py-1">
                                    <strong>Inicio:</strong> @(proyecto.FechaInicio?.ToString("dd/MM/yyyy") ?? "N/A")
                                </li>
                                <li class="list-group-item px-0 py-1">
                                    <strong>Fin:</strong> @(proyecto.FechaFin?.ToString("dd/MM/yyyy") ?? "N/A")
                                </li>
                                <li class="list-group-item px-0 py-1">
                                    <strong>Metodología:</strong> @proyecto.Metodologia
                                </li>
                            </ul>

                            <div class="mt-auto text-center">
                                @* mt-auto empuja esto al fondo, text-center para el botón *@
                                <a href="@Url.Action("Detalles", "Proyecto", new { id = proyecto.IdProyecto })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Ir al Proyecto @* Ejemplo con icono FontAwesome, si lo tienes *@
                                </a>
                                @* Podrías añadir más botones aquí, por ejemplo:
                                    <a href="@Url.Action("Tareas", "Tarea", new { idProyecto = proyecto.IdProyecto })" class="btn btn-outline-secondary btn-sm ml-2">
                                        <i class="fas fa-tasks"></i> Tareas
                                    </a>
                                *@
                            </div>
                        </div>
                        <div class="card-footer text-muted small">
                            ID Proyecto: @proyecto.IdProyecto
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>


<style>
    .card-title {
        color: #337ab7; /* Un azul estándar */
        font-weight: bold;
    }

    .card-text {
        font-size: 0.9em;
        /* Para evitar descripciones demasiado largas que rompan el diseño: */
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Número de líneas a mostrar */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 54px; /* Ajusta según el tamaño de fuente y line-clamp (aprox 3 * 18px) */
    }

    .list-group-item {
        border: none; /* Quita bordes internos de la lista dentro de la card */
    }
</style>
