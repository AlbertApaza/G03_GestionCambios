@model IEnumerable<G03_ProyectoGestion.Models.ProyectoCardViewModel>

@{
    ViewBag.Title = "Mis Proyectos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Mis Proyectos</h2>
        @Html.ActionLink("Crear Nuevo Proyecto", "Crear", "Proyecto", null, new { @class = "btn btn-success" })
    </div>
    <hr />

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No tienes proyectos asignados actualmente. Puedes crear uno nuevo usando el botón de arriba.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var proyecto in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@proyecto.NombreProyecto</h5>
                            <p class="card-text text-muted small">@proyecto.DescripcionProyecto</p>

                            <ul class="list-group list-group-flush mt-3 mb-3">
                                <li class="list-group-item px-0 py-1">
                                    <strong>Inicio:</strong> @(proyecto.FechaInicio?.ToString("dd/MM/yyyy") ?? "N/A")
                                </li>
                                <li class="list-group-item px-0 py-1">
                                    <strong>Fin:</strong> @(proyecto.FechaFin?.ToString("dd/MM/yyyy") ?? "N/A")
                                </li>
                                <li class="list-group-item px-0 py-1">
                                    <strong>Metodología:</strong> @proyecto.Metodologia
                                </li>
                            </ul>

                            <div class="mt-auto text-center">
                                @{
                                    string controlador = "";

                                    switch (proyecto.Metodologia?.ToLower())
                                    {
                                        case "rup":
                                            controlador = "RUP";
                                            break;
                                        case "scrum":
                                            controlador = "SCRUM";
                                            break;
                                        case "xp":
                                            controlador = "XP";
                                            break;
                                        default:
                                            controlador = "Proyecto"; // Por si falta o es desconocido
                                            break;
                                    }
                                }

                                <a href="@Url.Action("Detalles", controlador, new { id = proyecto.IdProyecto })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Ir al Proyecto
                                </a>
                            </div>
                        </div>
                        <div class="card-footer text-muted small">
                            ID Proyecto: @proyecto.IdProyecto
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card-title {
        color: #337ab7;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.9em;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 54px;
    }

    .list-group-item {
        border: none;
    }
</style>
