@model G03_ProyectoGestion.Models.tbProyectos
@{
    ViewBag.Title = "Proyecto XP (Client-Side Demo)";
    var projectName = Model?.nombreProyecto ?? "Demo Proyecto XP";
    var projectDesc = Model?.descripcionProyecto ?? "Simulación cliente de XP.";
    var startDate = Model?.fechaInicio?.ToString("dd MMMM yyyy") ?? DateTime.Now.ToString("dd MMMM yyyy");
    var endDate = Model?.fechaFin?.ToString("dd MMMM yyyy") ?? DateTime.Now.AddMonths(1).ToString("dd MMMM yyyy");
}

<div class="container mt-5">
    <div class="card shadow-lg border-left-primary">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-code-branch"></i> Proyecto XP (Client-Side Demo)</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Nombre del Proyecto</h5>
                    <p class="text-muted">@projectName</p>
                </div>
                <div class="col-md-6">
                    <h5>Descripción</h5>
                    <p class="text-muted">@projectDesc</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <h5>Fecha de Inicio</h5>
                    <p class="text-muted">@startDate</p>
                </div>
                <div class="col-md-6">
                    <h5>Fecha de Fin</h5>
                    <p class="text-muted">@endDate</p>
                </div>
            </div>

            <hr />

            <div class="row text-center mb-4">
                @{
                    var fases = new[] {
                        "HistoriasUsuario", "PlanningGame", "DisenoSimple", "TDD", "Parejas", "Integracion", "Refactorizacion", "Aceptacion", "Entrega", "Retroalimentacion", "NuevaIteracion"
                    };
                    var nombres = new[] {
                        "Historias de Usuario", "Planning Game", "Diseño Simple", "TDD", "Programación en Parejas", "Integración Continua", "Refactorización", "Pruebas de Aceptación", "Entrega de Iteración", "Retroalimentación", "Nueva Iteración"
                    };
                    for (int i = 0; i < fases.Length; i++)
                    {
                        <div class="col-md-4 mb-3">
                            <button onclick="mostrarFase('@fases[i]')" class="btn btn-outline-primary w-100">
                                @nombres[i]
                            </button>
                        </div>
                    }
                }
                <div class="col-md-4 mb-3">
                    <button onclick="mostrarFase('none')" class="btn btn-outline-secondary w-100">
                        Ocultar Secciones
                    </button>
                </div>
            </div>

            <hr />

            <div id="xpFasesContainer">
                @foreach (var fase in fases)
                {
                    if (fase == "HistoriasUsuario")
                    {
                        <div id="HistoriasUsuario" class="fase-xp" style="display:none;">
                            <h5><i class="fas fa-check-circle"></i> Historias de Usuario</h5>

                            <div class="mb-3 row">
                                <div class="col-md-3">
                                    <input type="text" id="titulo" class="form-control" placeholder="Título">
                                </div>
                                <div class="col-md-4">
                                    <textarea id="historia" class="form-control" placeholder="Historia de Usuario: Como... Quiero... Para..."></textarea>
                                </div>
                                <div class="col-md-4">
                                    <textarea id="criterios" class="form-control" placeholder="Criterios de Aceptación (CA01, CA02...)"></textarea>
                                </div>
                                <div class="col-md-1 d-grid">
                                    <button class="btn btn-success" onclick="agregarHistoria()">Agregar</button>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-bordered table-striped" id="tablaHistorias">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>ID</th>
                                            <th>Título</th>
                                            <th>Historia de Usuario</th>
                                            <th>Criterios de Aceptación</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                            <button class="btn btn-outline-secondary mt-2" onclick="mostrarFase('none')">Cerrar</button>
                        </div>

                    }
                    else if (fase == "NuevaIteracion")
                    {
                        <div id="NuevaIteracion" class="fase-xp" style="display:none;">
                            <h5><i class="fas fa-check-circle"></i> Nueva Iteración</h5>

                            <div class="mb-3 row">
                                <div class="col-md-4">
                                    <input type="text" id="nombreIteracion" class="form-control" placeholder="Nombre de la iteración" />
                                </div>
                                <div class="col-md-3">
                                    <input type="date" id="fechaInicioIteracion" class="form-control" />
                                </div>
                                <div class="col-md-3">
                                    <input type="date" id="fechaFinIteracion" class="form-control" />
                                </div>
                                <div class="col-md-2 d-grid">
                                    <button onclick="registrarIteracion()" class="btn btn-success">Guardar</button>
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-bordered table-sm" id="tablaIteraciones">
                                    <thead class="table-primary">
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Inicio</th>
                                            <th>Fin</th>
                                            <th>Estado</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>

                            <button class="btn btn-outline-secondary mt-2" onclick="mostrarFase('none')">Cerrar</button>
                        </div>
                    }

                    else
                    {
                        <div id="@fase" class="fase-xp" style="display:none;">
                            <h5><i class="fas fa-check-circle"></i> @fase</h5>
                            <textarea class="form-control mb-3" rows="3" placeholder="Notas sobre la fase '@fase'"></textarea>
                            <button class="btn btn-success">Guardar Nota</button>
                        </div>
                    }
                }
            </div>


            <div class="text-center mt-4">
                <a href="@Url.Action("Index", "Proyecto")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver a mis proyectos
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    function mostrarFase(id) {
        document.querySelectorAll('.fase-xp').forEach(f => f.style.display = 'none');
        if (id !== 'none') {
            document.getElementById(id).style.display = 'block';
        }
    }

    // ---------------- HISTORIAS DE USUARIO ----------------

    let historiaIdEditar = null;

    function listarHistorias() {
        const idProyecto = @Model.idProyecto;

        $.get('@Url.Action("ListarHistorias", "XP")', { idProyecto: idProyecto }, function (data) {
            const tbody = document.querySelector("#tablaHistorias tbody");
            tbody.innerHTML = "";
            data.forEach((h) => {
                tbody.innerHTML += `
                    <tr>
                        <td>${h.idHistoria}</td>
                        <td>${h.titulo}</td>
                        <td>${h.historia.replace(/\n/g, "<br/>")}</td>
                        <td>${h.criteriosAceptacion.replace(/\n/g, "<br/>")}</td>
                        <td>
                            <button class="btn btn-sm btn-warning me-1" onclick="editarHistoria(${h.idHistoria}, '${h.titulo}', \`${h.historia}\`, \`${h.criteriosAceptacion}\`)">Editar</button>
                            <button class="btn btn-sm btn-danger" onclick="eliminarHistoria(${h.idHistoria})">Eliminar</button>
                        </td>
                    </tr>`;
            });
        });
    }

    function agregarHistoria() {
        const titulo = document.getElementById("titulo").value.trim();
        const historia = document.getElementById("historia").value.trim();
        const criterios = document.getElementById("criterios").value.trim();
        const idProyecto = @Model.idProyecto;

        if (!titulo || !historia || !criterios) {
            alert("Completa todos los campos");
            return;
        }

        const url = historiaIdEditar
            ? '@Url.Action("ActualizarHistoria", "XP")'
            : '@Url.Action("RegistrarHistoria", "XP")';

        const payload = {
            idHistoria: historiaIdEditar,
            idProyecto: idProyecto,
            titulo: titulo,
            historia: historia,
            criteriosAceptacion: criterios
        };

        $.ajax({
            url: url,
            type: "POST",
            data: payload,
            success: function (response) {
                if (response.success) {
                    listarHistorias();
                    document.getElementById("titulo").value = "";
                    document.getElementById("historia").value = "";
                    document.getElementById("criterios").value = "";
                    historiaIdEditar = null;
                } else {
                    console.error("Error del servidor:", response.errores || response);
                    alert("Error al guardar historia");
                }
            },
            error: function (xhr, status, error) {
                console.error("Error AJAX:", error);
                console.error("Respuesta del servidor:", xhr.responseText);
                alert("Error inesperado al intentar guardar la historia.");
            }
        });
    }

    function editarHistoria(id, titulo, historia, criterios) {
        document.getElementById("titulo").value = titulo;
        document.getElementById("historia").value = historia;
        document.getElementById("criterios").value = criterios;
        historiaIdEditar = id;
    }

    function eliminarHistoria(id) {
        if (confirm("¿Estás seguro de eliminar esta historia?")) {
            $.post('@Url.Action("EliminarHistoria", "XP")', { id: id }, function (response) {
                if (response.success) {
                    listarHistorias();
                } else {
                    alert("No se pudo eliminar");
                }
            });
        }
    }

    // ---------------- ITERACIONES XP ----------------

    function registrarIteracion() {
        const nombre = document.getElementById("nombreIteracion").value;
        const fechaInicio = document.getElementById("fechaInicioIteracion").value;
        const fechaFin = document.getElementById("fechaFinIteracion").value;
        const idProyecto = @Model.idProyecto;

        if (!nombre || !fechaInicio || !fechaFin) {
            alert("Completa todos los campos.");
            return;
        }

        $.post('@Url.Action("RegistrarIteracion", "XP")', {
            nombre: nombre,
            fechaInicio: fechaInicio,
            fechaFin: fechaFin,
            estado: "Planificada",
            idProyecto: idProyecto
        }, function (response) {
            if (response.success) {
                listarIteraciones();
                document.getElementById("nombreIteracion").value = "";
            } else {
                alert("Error al registrar");
            }
        });
    }

    function listarIteraciones() {
        const idProyecto = @Model.idProyecto;
        $.get('@Url.Action("ObtenerIteraciones", "XP")', { idProyecto: idProyecto }, function (data) {
            const tbody = document.querySelector("#tablaIteraciones tbody");
            tbody.innerHTML = "";
            data.forEach(item => {
                tbody.innerHTML += `<tr>
                    <td>${item.nombre}</td>
                    <td>${item.fechaInicio}</td>
                    <td>${item.fechaFin}</td>
                    <td>${item.estado}</td>
                </tr>`;
            });
        });
    }

    document.addEventListener("DOMContentLoaded", function () {
        listarIteraciones();
        listarHistorias();
    });
    </script>
}